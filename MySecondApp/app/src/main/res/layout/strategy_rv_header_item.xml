<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="100dp"
    android:background="#fff">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_strategy_header_item"
        android:layout_width="120dp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_strategy_header_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_strategy_header_item"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:text="甜蜜礼物社"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_strategy_header_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小礼君"
        android:layout_toRightOf="@id/img_strategy_header_item"
        android:layout_below="@id/tv_strategy_header_item_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
</RelativeLayout>
</android.support.v7.widget.CardView>