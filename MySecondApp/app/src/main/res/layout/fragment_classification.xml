<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
   <android.support.design.widget.TabLayout
       android:id="@+id/tl_classification"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       />
    <SearchView
        android:id="@+id/sv_classification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tl_classification"
        android:queryHint="选份走心的好礼送给Ta" />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_classification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sv_classification"
        android:layout_marginBottom="68dp"
        />
</RelativeLayout>